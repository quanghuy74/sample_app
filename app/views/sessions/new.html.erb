<% provide :title, t("login") %>
<h1><%= t "user_login.log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t("user_login.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("user_login.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("user_login.log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("user_login.new_user") %><%= link_to t("user_login.signup_now"), signup_path %></p>
  </div>
</div>
