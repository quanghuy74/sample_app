<header class="navbar navbar-fixed-top navbar-inverse">
	
  <div class="container">
    <%= link_to t("title.main_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to  t("home"), root_path %></li>
        <li><%= link_to  t("help"), help_path %></li>
        <li><%= link_to t("about"), about_path %></li>
        <li><%= link_to t("contact"), contact_path %></li>

        <% if logged_in? %>
          <li><%= link_to t("user_login.us"), "#" %></li>
          <li class="dropdown">
            <%= link_to  root_path, data: {toggle: "dropdown"}, class: "dropdown-toggle" do%>
              <%= t("user_login.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("user_login.profile"), current_user %></li>
              <li><%= link_to t("user_login.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user_login.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<%= link_to t("English"), locale: :en %>
